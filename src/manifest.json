{
    "manifest_version": 2,
    "name": "VulnExt",
    "version": "1.0",
    "description": "Web Technology and Vulnerability Detection Browser Extension",
    "icons": {
        "16": "path/to/16x16/icon.png",
        "48": "path/to/48x48/icon.png",
        "128": "path/to/128x128/icon.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "path/to/16x16/icon.png",
            "48": "path/to/48x48/icon.png",
            "128": "path/to/128x128/icon.png"
        },
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "background": {
        "scripts": [ "background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["content_script.js"],
        "css": ["css/style.css"],
        "run_at": "document_end"
    }],
    "options_page": "options.html"
}